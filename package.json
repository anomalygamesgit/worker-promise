{
  "name": "@anomalygames/worker-promise",
  "version": "0.0.3",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "run-s clean:dist build:dist",
    "build:dist": "tsc --outDir dist",
    "clean": "run-s clean:dist",
    "clean:dist": "rimraf dist",
    "eslint": "eslint --ext .js,.ts,.tsx",
    "eslint:fix": "eslint --fix --ext .js,.ts,.tsx",
    "format": "run-s eslint:fix prettier:fix prettier-package-json:fix",
    "postinstall": "yarn build",
    "lint": "run-s eslint tsc",
    "prepare": "husky install",
    "test": "echo \"No tests setup yet.\"",
    "tsc": "tsc --noEmit",
    "prettier": "prettier .",
    "prettier-package-json:fix": "prettier-package-json --write ./package.json",
    "prettier:fix": "prettier . --write"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "nanoid": "^3.1.23",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "eslint-plugin-sort-export-all": "^1.1.1",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-typescript-sort-keys": "^1.7.0",
    "husky": "^7.0.0",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0"
  }
}
